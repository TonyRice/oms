{
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "preserve",
    "noEmit": true,
    "module": "esnext",
    "esModuleInterop": true,
    "strictNullChecks": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "paths": {
      "~/*": ["./src/*"]
    },
    "lib": ["es2015", "es2016", "es2017", "es2018", "esnext"]
  },
  "include": ["src"],
  "exclude": [
    "node_modules"
  ]
}
