{
  "properties": {
    "commands": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z]+$": {
          "type": "object",
          "properties": {
            "help": {
              "type": "string"
            },
            "format": {
              "type": "string"
            },
            "arguments": {
              "type": "object",
              "patternProperties": {
                "^\\w+$": {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "enum": ["int", "float", "string", "uuid", "list", "object", "boolean"]
                    },
                    "pattern": {
                      "type": "string"
                    },
                    "enum": {
                      "type:": "array"
                    },
                    "range": {
                      "type": "array",
                      "items": {
                        "type": "integer"
                      },
                      "minItems": 2,
                      "maxItems": 2
                    },
                    "required": {
                      "type": "boolean"
                    }
                  },
                  "required": ["type"],
                  "additionalProperties": false
                }
              },
              "additionalProperties": false
            },
            "http": {
              "type": "object",
              "properties": {
                "method": {
                  "type": "string",
                  "enum": ["get", "post", "put", "delete"]
                },
                "endpoint": {
                  "type": "string"
                }
              },
              "required": ["method", "endpoint"]
            },
            "server": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string"
                },
                "port": {
                  "type": "integer"
                },
                "command": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              },
              "required": ["type", "port", "command"]
            }
          }
        }
      },
      "additionalProperties": false
    },
    "server": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "port": {
          "type": "integer"
        },
        "command": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["type", "port", "command"]
    },
    "environment": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z]+$": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["int", "float", "string", "uuid", "list", "object", "boolean"]
            },
            "pattern": {
              "type": "string"
            },
            "required": {
              "type": "boolean"
            },
            "help": {
              "type": "string"
            }
          },
          "required": ["type"],
          "additionalProperties": false
        }
      }
    },
    "volumes": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z]+$": {
          "type": "object",
          "properties": {
            "target": {
              "type": "string"
            },
            "persist": {
              "type": "boolean"
            }
          },
          "required": ["target"],
          "additionalProperties": false
        }
      }
    },
    "metrics": {
      "type": "object",
      "properties": {
        "ssl": {
          "type": "boolean"
        },
        "port": {
          "type": "integer"
        },
        "uri": {
          "type": "string"
        }
      },
      "required": ["port", "uri"],
      "additionalProperties": false
    },
    "system": {
      "type": "object",
      "properties": {
        "requests": {
          "type": "object",
          "properties": {
            "cpu": {
              "type": "integer"
            },
            "gpu": {
              "type": "integer"
            },
            "memory": {
              "type": "string",
              "pattern": "[0-9]+[MB|GB]."
            }
          },
          "additionalProperties": false
        },
        "limits": {
          "type": "object",
          "properties": {
            "cpu": {
              "type": "integer"
            },
            "gpu": {
              "type": "integer"
            },
            "memory": {
              "type": "string",
              "pattern": "[0-9]+[MB|GB]."
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "scale": {
      "type": "object",
      "properties": {
        "metric_type": {
          "type": "string",
          "enum": ["cpu", "mem"]
        },
        "metric_agg": {
          "type": "string",
          "enum": ["avg", "min", "max", "mean", "mode"]
        },
        "metric_interval": {
          "type": "integer",
          "min": "1",
          "max": "600000"
        },
        "metric_target": {
          "type": "integer",
          "min": "1"
        },
        "min": {
          "type": "integer",
          "min": "1"
        },
        "max": {
          "type": "integer",
          "min": "1"
        },
        "desired": {
          "type": "integer",
          "min": "1"
        },
        "cooldown": {
          "type": "integer",
          "min": "1"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}