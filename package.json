{
  "name": "microservice-guide-cli",
  "version": "0.0.2",
  "main": "cli.js",
  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage",
    "eslint": "eslint . --ignore-pattern coverage/ --quiet"
  },
  "bin": {
    "microservice-guide-cli": "./cli.js"
  },
  "repository": "git@github.com:microservice-guide/cli.git",
  "license": "MIT",
  "dependencies": {
    "ajv": "^6.5.0",
    "commander": "^2.15.1",
    "shelljs": "^0.8.2",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-config-google": "^0.9.1",
    "jest": "^23.0.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "cli.js",
      "schema/**/*.js",
      "commands/**/*.js"
    ],
    "coverageReporters": [
      "lcov",
      "html"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "google"
    ],
    "rules": {
      "max-len": 0
    },
    "env": {
      "jest": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 6
    }
  }
}
