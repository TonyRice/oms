{
  "name": "omg",
  "description": "Test and debug OMG microservices.",
  "keywords": [
    "omg",
    "cli",
    "microservice",
    "microservices"
  ],
  "version": "0.0.10",
  "main": "omg",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "eslint": "eslint . --ext .ts --quiet",
    "test": "jest",
    "coverage": "jest --coverage"
  },
  "bin": {
    "omg": "./omg"
  },
  "repository": "git@github.com:microservice-guide/cli.git",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^10.12.5",
    "ajv": "^6.5.0",
    "commander": "^2.15.1",
    "eslint": "^5.9.0",
    "log-symbols": "^2.2.0",
    "ora": "^2.1.0",
    "request": "^2.87.0",
    "request-promise": "^4.2.2",
    "shelljs": "^0.8.2",
    "underscore": "^1.9.1",
    "uuid": "^3.3.2",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "eslint-config-google": "^0.11.0",
    "eslint-plugin-typescript": "^0.13.0",
    "jest": "^23.0.1",
    "sinon": "^6.0.0",
    "ts-jest": "^23.10.4",
    "typescript": "^3.1.6",
    "typescript-eslint-parser": "^20.1.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "schema/**/*.js",
      "src/**/*.js"
    ],
    "coverageReporters": [
      "lcov",
      "html"
    ],
    "testURL": "http://localhost",
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/__tests__/**/*.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "eslintConfig": {
    "parser": "typescript-eslint-parser",
    "plugins": [
      "typescript"
    ],
    "extends": [
      "eslint:recommended",
      "google"
    ],
    "rules": {
      "max-len": 0,
      "no-throw-literal": 0,
      "quote-props": [
        2,
        "as-needed"
      ],
      "indent": ["error", 2, { "MemberExpression": 1 , "SwitchCase": 1 }]
    },
    "env": {
      "jest": true,
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module"
    }
  }
}
